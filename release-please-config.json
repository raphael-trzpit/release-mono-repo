{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": ["node-workspace"],
  "separate-pull-requests": true,
  "always-update": true,
  "tag-separator": "@",
  "release-type": "node",
  "packages": {
    "packages/dependant-pkg": {
      "package-name": "@raphael-trzpit/dependant-pkg"
    },
    "packages/versioned-pkg": {
      "package-name": "@raphael-trzpit/versioned-pkg"
    },
    "packages/workspace-pkg": {
      "package-name": "@raphael-trzpit/workspace-pkg"
    },
    "services/dependant-service": {
      "package-name": "@raphael-trzpit/dependant-service"
    },
    "services/independant-service": {
      "package-name": "@raphael-trzpit/independant-service"
    }
  }
}